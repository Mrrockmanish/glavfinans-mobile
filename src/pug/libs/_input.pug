mixin input(text, adClass, upClass)
    div(class=`input-wrap relative border border-91 flex items-center justify-between rounded-lg py-2 pl-4 pr-5 h-14 ${upClass}`)
        input(required type="text" name="example" class=`style-input ${adClass} relative mt-2 text-sm w-full z-10 bg-transparent`)
        label(class="style-input-label absolute text-sm text-gray flex items-center")= text